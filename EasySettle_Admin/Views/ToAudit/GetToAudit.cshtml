@model IEnumerable<EasySettle.Models.Property>

@{
    ViewData["Title"] = "GetToAudit";
}

<body>
    <h3 class="display-5 text-warning">Get To Audit</h3>
    <div class="container">
        <div class="row">
            @foreach (var property in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-2">
                                <dt class="col-sm-6">PropertyID:</dt>
                                <dd class="col-sm-6">@property.PropertyID</dd>
                            </div>                            
                            <div class="row mb-2">
                                <dt class="col-sm-6">Street:</dt>
                                <dd class="col-sm-6">@property.Street</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">City:</dt>
                                <dd class="col-sm-6">@property.City</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">Zip Code:</dt>
                                <dd class="col-sm-6">@property.ZipCode</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">Type:</dt>
                                <dd class="col-sm-6">@property.Type</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">Rooms:</dt>
                                <dd class="col-sm-6">@property.Rooms</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">Rent:</dt>
                                <dd class="col-sm-6">@property.Rent</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">Rented:</dt>
                                <dd class="col-sm-6">@property.Rented</dd>
                            </div>
                            <div class="row mb-2">
                                <dt class="col-sm-6">Owner ID:</dt>
                                <dd class="col-sm-6">@property.OwnerID</dd>
                            </div>
                            <div class="row mb-2 align-items-center">
                                <a class="btn btn-warning col-sm-6"  asp-action="CheckPhoto" asp-controller="ToAudit" asp-route-id="@property.PropertyID">Check Photo</a>
                            </div>                            
                            <div class="row mb-2 align-items-center">
                                <a class="btn btn-warning col-sm-6"  asp-action="Approve" asp-controller="ToAudit" asp-route-id="@property.PropertyID">Approve</a>
                            </div>
                            <div class="row mb-2 align-items-center">
                                <a class="btn btn-warning col-sm-6"  asp-action="Decline" asp-controller="ToAudit" asp-route-id="@property.PropertyID">Decline</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
